{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@assets": ["./assets"],
      "@components": ["./app/shared/components"],
      "@hooks": ["./app/shared/hooks"],
      "@constants": ["./app/shared/constants"],
      "@screens": ["./app/shared/screens"],
      "@utils": ["./app/shared/utils"],
      "@images": ["./assets/images"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}